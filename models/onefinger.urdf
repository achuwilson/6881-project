<?xml version="1.0"?>
<robot name="one_finger">
<material name="blue">
    <color rgba="0 0 0.9 1"/>
  </material>

  <link name="finger_base">
    <visual>
      <geometry>
        <cylinder length="0.005" radius="0.035"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.0025"/>
    <material name="blue"/>
    </visual>
  </link>

  <link name="stem">
    <visual>
      <geometry>
        <cylinder length="0.045" radius="0.01"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.0225"/>
    <material name="blue"/>
    </visual>
  </link>

   <joint name="base_to_stem" type="fixed">
    <parent link="finger_base"/>
    <child link="stem"/>
    <origin xyz="0 0 0.005"/>
  </joint>


  <link name="tip">
    <visual>
      <geometry>
        <sphere radius="0.01"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.00"/>
    <material name="blue"/>
    </visual>
  </link>

   <joint name="stem_to_tip" type="fixed">
    <parent link="stem"/>
    <child link="tip"/>
    <origin xyz="0 0 0.045"/>
  </joint>

</robot>